.container{
  display: inline-flex;/*设置inline-flex  使元素宽度自适应*/
  flex-direction: row;
  padding: 10rpx;
}
.container image{
  width: 32rpx;
  height: 28rpx;
}
.container text{
  font-size: 24rpx;
  line-height: 24rpx;/*去除字的空白间距*/
  color: #bbb;
  position: relative;
  bottom: 10rpx;
  left: 6rpx;
}